<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include layout="@layout/custom_toolbar">

    </include>

    <TextView
        android:id="@+id/tv_favTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/card"
        android:paddingTop="@dimen/conference_vertical_margin"
        android:paddingBottom="@dimen/conference_vertical_margin"
        android:paddingLeft="@dimen/conference_horizontal_margin"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_changeFavTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更改我喜欢的球队>>"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="right"
        android:textColor="@color/red"/>

</LinearLayout>